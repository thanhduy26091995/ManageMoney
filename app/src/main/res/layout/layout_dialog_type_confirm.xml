<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_150"
        android:layout_marginRight="@dimen/space_150"
        android:background="@drawable/dialog_box"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_40">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_48"
            android:paddingRight="@dimen/space_48">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mBtClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_dialog_typeconfirm" />

            <TextView
                android:id="@+id/textView_titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_40"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_title"
                android:textColor="@color/blue_500"
                android:textSize="@dimen/font_48" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_weight="1"
                android:gravity="center"
                android:minLines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/font_42" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_50"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_denice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_box_button_first"
                    android:text="@string/dialog_button_confirm_no"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_500"
                    android:textSize="@dimen/font_48" />

                <Button
                    android:id="@+id/button_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_box_button_second"
                    android:text="@string/dialog_button_confirm_yes"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_48" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>